<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:startColor="@color/colorSelectWhite"
                android:endColor="@color/colorSelectWhite"/>
        </shape>

    </item> <!-- pressed -->
    <item>
        <shape android:shape="oval">
            <gradient android:startColor="@color/colorNotSelectWhite"
                android:endColor="@color/colorNotSelectWhite"/>
        </shape>
    </item> <!-- default -->

</selector>